@model IEnumerable<Comment>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="nav-item">List of comment</h2>
        </div>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="col-6 text-end">
                <a asp-controller="Comment" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus"></i> &nbsp; Create new comment
                </a>
            </div>
        }
        <div class="col-12 text-end">
            <a asp-controller="Item" asp-action="Index" asp-route-id="@GlobalCollection.CollectionId" class="btn btn-primary">Back</a>
        </div>
    </div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Comment
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Text
                </td>
                <td width="13%">
                    @if (obj.UserId == GlobalAppUserId.UserId)
                        {
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Comment" asp-action="Del" asp-route-id="@obj.Id"
                                class="btn btn-danger mx-2"> <i class="bi bi-trash3"> </i>Delete</a>
                            </div>
                        }
                 </td>
            </tr>
        }
    </tbody>
</table>
</div>
