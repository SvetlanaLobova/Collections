@model IEnumerable<Item>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="nav-item">Searching results</h2>
        </div>
        @if (User.IsInRole("admin"))
        {
            <div class="col-12 text-end">
                <a asp-controller="User" asp-action="Index" class="btn btn-primary">Back</a>
            </div>
        }
        else if (User.Identity.IsAuthenticated)
        {
            <div class="col-12 text-end">
                <a asp-controller="Collection" asp-action="Index" asp-route-id="@GlobalAppUserId.UserId" class="btn btn-primary">Back</a>
            </div>
        }
        else
        {
            <div class="col-12 text-end">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back</a>
            </div>
        }
    </div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Item name
            </th>
            <th>
                Tag
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.Tag
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
